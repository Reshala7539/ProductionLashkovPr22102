<Window x:Class="Production.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление производством"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
            
        </Grid.ColumnDefinitions>

        <StackPanel Background="#2D2D30" Grid.Column="1">
            <TextBlock Text="МЕНЮ"
               Foreground="White"
               FontSize="16"
               Margin="10"/>

            <Button Content="Материалы"
            Margin="10"
            Height="40"
            Click="Materials_Click"/>

            <Button Content="Продукция"
            Margin="10"
            Height="40"
            Click="Products_Click"/>

            <Button Content="Поставки"
            Margin="10"
            Height="40"
            Click="Purchases_Click"/>

            <Button Content="Склад"
            Margin="10"
            Height="40"
            Click="Stock_Click"/>

            <Button Content="Заказы"
            Margin="10"
            Height="40"
            Click="Orders_Click"/>

            <Button Content="Сотрудники/Оборудование"
            Margin="10"
            Height="40"
            Click="EmployeesEquipment_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame"
               Grid.Column="0"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>