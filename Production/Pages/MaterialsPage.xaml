<Page x:Class="Production.Pages.MaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Материалы">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Справочник материалов"
                   FontSize="20"
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование"
                                    Binding="{Binding Name}"/>

                <DataGridTextColumn Header="Ед. изм."
                                    Binding="{Binding Units.Name}"/>

                <DataGridTextColumn Header="Минимальный остаток"
                                    Binding="{Binding MinStock}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>